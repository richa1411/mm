<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>pro_home</servlet-name>
        <servlet-class>pro_home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>con_home</servlet-name>
        <servlet-class>con_home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login_serv</servlet-name>
        <servlet-class>login_serv</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>pro_home</servlet-name>
        <url-pattern>/pro_home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>con_home</servlet-name>
        <url-pattern>/con_home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login_serv</servlet-name>
        <url-pattern>/login_serv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
